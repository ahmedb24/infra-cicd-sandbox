{
    "annotations": {
        "list": []
    },
    "panels": [
        {
            "type": "graph",
            "title": "Pod CPU Usage",
            "targets": [
                {
                    "expr": "sum(rate(container_cpu_usage_seconds_total{image!=\"\"}[5m])) by (pod)",
                    "legendFormat": "{{pod}}"
                }
            ]
        },
        {
            "type": "graph",
            "title": "Pod Memory Usage (MB)",
            "targets": [
                {
                    "expr": "sum(container_memory_usage_bytes{image!=\"\"}) by (pod) / 1024 / 1024",
                    "legendFormat": "{{pod}}"
                }
            ]
        },
        {
            "type": "graph",
            "title": "Node CPU Usage",
            "targets": [
                {
                    "expr": "100 - (avg by(instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
                    "legendFormat": "{{instance}}"
                }
            ]
        },
        {
            "type": "graph",
            "title": "Node Memory Usage (%)",
            "targets": [
                {
                    "expr": "100 * (1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes))",
                    "legendFormat": "{{instance}}"
                }
            ]
        },
        {
            "type": "stat",
            "title": "Pod Availability",
            "targets": [
                {
                    "expr": "sum(kube_pod_status_phase{phase=\"Running\"})",
                    "legendFormat": "Running Pods"
                },
                {
                    "expr": "sum(kube_pod_status_phase{phase=\"Pending\"})",
                    "legendFormat": "Pending Pods"
                },
                {
                    "expr": "sum(kube_pod_status_phase{phase=\"Failed\"})",
                    "legendFormat": "Failed Pods"
                }
            ]
        },
        {
            "type": "graph",
            "title": "HTTP Requests 2xx",
            "targets": [
                {
                    "expr": "sum(rate(nginx_ingress_controller_requests{status=~\"2..\"}[5m])) by (ingress)",
                    "legendFormat": "{{ingress}}"
                }
            ]
        },
        {
            "type": "graph",
            "title": "HTTP Requests 4xx",
            "targets": [
                {
                    "expr": "sum(rate(nginx_ingress_controller_requests{status=~\"4..\"}[5m])) by (ingress)",
                    "legendFormat": "{{ingress}}"
                }
            ]
        },
        {
            "type": "graph",
            "title": "HTTP Requests 5xx",
            "targets": [
                {
                    "expr": "sum(rate(nginx_ingress_controller_requests{status=~\"5..\"}[5m])) by (ingress)",
                    "legendFormat": "{{ingress}}"
                }
            ]
        }
    ],
    "title": "Cluster Dashboard",
    "timezone": "browser",
    "schemaVersion": 30,
    "version": 1
}